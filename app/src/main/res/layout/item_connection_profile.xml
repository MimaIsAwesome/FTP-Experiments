<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_option_connections"
    style="@style/CardMainOption">

    <LinearLayout style="@style/CardMainOptionLinearLayout">

        <LinearLayout style="@style/CardMainOptionInnerLinearLayout">

            <TextView
                style="@style/CardMainOptionTitle"
                android:text="@string/main_option_connection_title" />

            <TextView
                style="@style/CardMainOptionDescription"
                android:text="@string/main_option_connection_desc" />
        </LinearLayout>

        <TextView
            android:id="@+id/connection_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_more_vertical" />
    </LinearLayout>

</androidx.cardview.widget.CardView>